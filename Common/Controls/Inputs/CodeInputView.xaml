<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Controls.Inputs.CodeInputView">
    <Grid RowDefinitions="Auto"
          ColumnDefinitions="*,*,*,*,*,*" Padding="20" HorizontalOptions="Center">
        <Entry x:Name="Digit0" MaxLength="1" TextChanged="OnTextChanged" HorizontalTextAlignment="Center"
               Style="{StaticResource DigitEntryStyle}" />
        <Entry x:Name="Digit1" MaxLength="1" TextChanged="OnTextChanged" HorizontalTextAlignment="Center"
               Style="{StaticResource DigitEntryStyle}" Grid.Column="1" />
        <Entry x:Name="Digit2" MaxLength="1" TextChanged="OnTextChanged" HorizontalTextAlignment="Center"
               Style="{StaticResource DigitEntryStyle}" Grid.Column="2" />
        <Entry x:Name="Digit3" MaxLength="1" TextChanged="OnTextChanged" HorizontalTextAlignment="Center"
               Style="{StaticResource DigitEntryStyle}" Grid.Column="3" />
        <Entry x:Name="Digit4" MaxLength="1" TextChanged="OnTextChanged" HorizontalTextAlignment="Center"
               Style="{StaticResource DigitEntryStyle}" Grid.Column="4" />
        <Entry x:Name="Digit5" MaxLength="1" TextChanged="OnTextChanged" HorizontalTextAlignment="Center"
               Style="{StaticResource DigitEntryStyle}" Grid.Column="5" />
    </Grid>
</ContentView>
